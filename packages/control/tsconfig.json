{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ESNext"],
    "allowJs": true,
    "outDir": "lib",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": ".",
    "composite": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../storage"
    }
  ]
}
